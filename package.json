{
  "name": "canonstrata-system",
  "version": "2.2.2",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:https": "next dev --experimental-https",
    "dev:turbo": "next dev --turbo",
    "build": "npm run db:generate && npm run typecheck && npm run validate:all && next build",
    "build:analyze": "ANALYZE=true npm run build",
    "start": "next start",
    "start:prod": "NODE_ENV=production next start -p 3000",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --config .eslintrc.json",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --config .eslintrc.json --fix",
    "typecheck": "tsc --noEmit --incremental false",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md,mdx}\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:visual": "playwright test --config=playwright.visual.config.ts",
    "test:visual:update": "playwright test --config=playwright.visual.config.ts --update-snapshots",
    "test:a11y": "npm run test:a11y:axe && npm run test:a11y:lighthouse",
    "test:a11y:axe": "vitest run --config vitest.config.a11y.ts",
    "test:a11y:lighthouse": "lhci autorun --config=lighthouserc.json",
    "test:a11y:storybook": "npm run build-storybook && npx test-storybook --url http://localhost:6006",
    "storybook": "storybook dev -p 6006",
    "storybook:test": "test-storybook",
    "storybook:visual": "npm run storybook:build && npx playwright test --config=playwright.storybook.config.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "monitor:bundle": "npm run build:analyze && tsx scripts/bundle-monitor.ts",
    "monitor:perf": "tsx scripts/performance-monitor.ts",
    "monitor:vitals": "tsx scripts/web-vitals-monitor.ts",
    "lighthouse": "lhci autorun --config=lighthouserc.json",
    "lighthouse:ci": "lhci autorun --config=lighthouserc.ci.json",
    "ci:validate": "tsx scripts/ci-validate.ts",
    "ci:test": "npm run lint && npm run typecheck && npm run test && npm run test:e2e",
    "ci:build": "npm run ci:test && npm run build",
    "ci:full": "npm run ci:validate && npm run ci:build && npm run monitor:bundle",
    "pre-commit": "tsx scripts/pre-commit-validate.ts",
    "pre-push": "npm run ci:validate",
    "introspect": "tsx scripts/cli/introspect.ts",
    "introspect:components": "tsx scripts/cli/introspect.ts components",
    "introspect:tokens": "tsx scripts/cli/introspect.ts tokens",
    "introspect:motion": "tsx scripts/cli/introspect.ts motion",
    "introspect:forms": "tsx scripts/cli/introspect.ts forms",
    "introspect:health": "tsx scripts/cli/introspect.ts health",
    "gatekeeper:check": "tsx scripts/gatekeeper/check.ts",
    "gatekeeper:immutability": "tsx scripts/gatekeeper/immutability-check.ts",
    "gatekeeper:dependencies": "tsx scripts/gatekeeper/dependency-preflight.ts",
    "gatekeeper:ast": "tsx scripts/ast-validators/index.ts",
    "gatekeeper:storybook": "npm run build-storybook && tsx scripts/gatekeeper/storybook-validator.ts",
    "lint:constitutional": "eslint . --config eslint.constitutional.config.mjs",
    "clean": "rm -rf .next out dist build storybook-static .turbo node_modules/.cache",
    "clean:artifacts": "tsx scripts/clean-artifacts.ts",
    "clean:all": "npm run clean && rm -rf node_modules",
    "check:deps": "npx npm-check-updates",
    "check:security": "npm audit --audit-level=moderate",
    "validate:tokens": "tsx scripts/ast-validators/validate-tokens.ts",
    "validate:motion": "tsx scripts/ast-validators/validate-motion.ts",
    "validate:forms": "tsx scripts/form-state-validator.ts",
    "validate:rendering": "tsx scripts/ast-validators/validate-rendering.ts",
    "validate:react-imports": "tsx scripts/ast-validators/validate-react-imports.ts",
    "validate:all": "npm run validate:react-imports && tsx scripts/invariant-enforcer.ts",
    "validate:invariants": "tsx scripts/invariant-enforcer.ts",
    "validate:no-any": "tsx scripts/ast-validators/validate-no-any-types.ts",
    "validate:no-suppressions": "tsx scripts/ast-validators/validate-no-ts-suppressions.ts",
    "validate:tokens-ast": "tsx scripts/ast-validators/validate-tokens-ast.ts",
    "prebuild": "npm run validate:all",
    "test:invariants": "tsx scripts/invariant-enforcer.ts",
    "verify:docs": "node scripts/verify-docs.js",
    "build-storybook": "storybook build",
    "gatekeeper": "tsx scripts/gatekeeper/index.ts",
    "gatekeeper:boundary": "tsx scripts/gatekeeper/boundary-check.ts",
    "gatekeeper:motion": "tsx scripts/gatekeeper/motion-kernel-check.ts",
    "gatekeeper:all": "npm run gatekeeper"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^1.5.0",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-form": "^0.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.4.0",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.26",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.562.0",
    "next": "^16.1.1",
    "next-auth": "^4.24.13",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.11",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.69.0",
    "react-hot-toast": "^2.4.1",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "tailgrids": "^2.2.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@axe-core/react": "^4.10.2",
    "@babel/parser": "^7.26.3",
    "@babel/traverse": "^7.26.7",
    "@babel/types": "^7.26.7",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^16.1.1",
    "@playwright/test": "^1.48.2",
    "@storybook/nextjs": "^10.1.11",
    "@storybook/react": "^10.1.11",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^6.4.14",
    "@types/prismjs": "^1.26.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.23",
    "axe-core": "^4.10.2",
    "eslint": "^9.17.0",
    "eslint-config-next": "^16.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-storybook": "^0.11.1",
    "esprima": "^4.0.1",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lighthouse": "^12.2.1",
    "lint-staged": "^15.2.11",
    "npm-check-updates": "^17.1.16",
    "pa11y": "^8.0.0",
    "pixelmatch": "^6.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prisma": "^7.0.1",
    "rimraf": "^6.0.1",
    "storybook": "^10.1.11",
    "tailwindcss": "^4.1.18",
    "ts-morph": "^24.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8",
    "web-vitals": "^4.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md,mdx}": [
      "prettier --write"
    ]
  }
}
