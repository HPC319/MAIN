{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/strict-boolean-expressions": "error",
    "@typescript-eslint/no-floating-promises": "error",
    "@typescript-eslint/no-misused-promises": "error",
    "react/no-unescaped-entities": "off",
    "no-restricted-syntax": [
      "error",
      {
        "selector": "JSXAttribute[name.name='style']",
        "message": "CANONSTRATA VIOLATION: Inline styles prohibited. Use design tokens only."
      },
      {
        "selector": "ImportDeclaration[source.value='framer-motion']",
        "message": "CANONSTRATA VIOLATION: Unauthorized motion import. Only kernel-authorized motion allowed."
      }
    ],
    "no-restricted-properties": [
      "error",
      {
        "object": "React",
        "property": "CSSProperties",
        "message": "CANONSTRATA VIOLATION: Direct CSS properties prohibited. Use design tokens."
      }
    ]
  }
}
